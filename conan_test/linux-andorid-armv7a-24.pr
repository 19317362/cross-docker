YW_CROSS_HOME=/opt/cross
standalone_toolchain=$YW_CROSS_HOME/toolchains/llvm/prebuilt/linux-x86_64
target_host=arm-linux-androideabi
cc_compiler=clang
cxx_compiler=clang++

[settings]
os=Android
os.api_level=24
arch=armv7
compiler=clang
compiler.version=11
compiler.libcxx=c++_shared
build_type=Release

[options]
*:shared=True

[env]

CONAN_CMAKE_FIND_ROOT_PATH=$standalone_toolchain
CONAN_CMAKE_SYSROOT=$standalone_toolchain/sysroot
PATH=[$standalone_toolchain/bin]
CHOST=$target_host
AR=$target_host-ar
AS=$target_host-as
RANLIB=$target_host-ranlib
CC=$target_host-$cc_compiler
CXX=$target_host-$cxx_compiler
LD=$target_host-ld
STRIP=$target_host-strip
CFLAGS= -fPIE -fPIC -I$standalone_toolchain/include/c++/4.9.x
CXXFLAGS= -fPIE -fPIC -I$standalone_toolchain/include/c++/4.9.x
LDFLAGS= -pie

CONAN_MAKE_PROGRAM=$YW_CROSS_HOME/prebuilt/linux-x86_64/bin/make
CONAN_CMAKE_TOOLCHAIN_FILE=$YW_CROSS_HOME/build/cmake/android.toolchain.cmake

